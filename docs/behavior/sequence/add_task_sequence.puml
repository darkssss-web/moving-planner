@startuml Добавление_Задачи

actor "Пользователь" as User
participant "Интерфейс" as UI
participant "Сервис задач" as TaskService
database "База данных" as DB

User -> UI : открыть форму задачи
UI -> TaskService : создать задачу (данные)
activate TaskService

TaskService -> DB : INSERT INTO Tasks
activate DB
DB --> TaskService
deactivate DB

opt Указан срок выполнения
  TaskService -> DB : сохранить due_date
  activate DB
  DB --> TaskService
  deactivate DB
end

TaskService --> UI : задача создана
deactivate TaskService

@enduml
